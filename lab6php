<?php
$lower = $_REQUEST['lower'];
$upper = $_REQUEST['upper'];
$target = $_REQUEST['target'];


switch ($target) {
case 1:


if (($lower > 0) && ($lower < 100)) {
    echo " <html xmlns=\"http://www.w3.ord/1999/xhtml\"> \n";
        echo " <head><title>Counting</title></head>\n";
        echo " <body>\n";
    echo " <h1>Count up to $lower</h1> \n";
    for ($i = 1; $i <= $lower; $i++) {
        echo " $i<br />\n";
    }
     
        echo " </body> \n";
     echo " </html> \n";
} else {
    echo " <h1>Limits out of range</h1>\n";
}
break;


case 2:


if (($lower > 0) && ($lower < 100) && ($upper < 100) && ($upper > 0)) {
    echo " <html xmlns=\"http://www.w3.ord/1999/xhtml\"> \n";
        echo " <head><title>Counting</title></head>\n";
        echo " <body>\n";
    echo " <h1>Count from $lower to $upper</h1> \n";
    for ($i = $lower; $i <= $upper; $i++) {
        echo " $i<br />\n";
    }
    
        echo " </body> \n";
    echo " </html> \n";
} else {
    echo " <h1>Limits out of range</h1>\n";
}
break;


case 3:


if (($upper > 0) && ($upper < 100)) {
    echo " <html xmlns=\"http://www.w3.ord/1999/xhtml\"> \n";
        echo " <head><title>Counting</title></head>\n";
        echo " <body>\n";
    echo " <h1>Count from $upper</h1> \n";
    for ($i = $upper; $i <= 100; $i++) {
        echo " $i<br />\n";
    }
        echo " </body> \n";
    echo " </html> \n";
} else {
    echo " <h1>Limits out of range</h1>\n";
}
break;


}


?>
